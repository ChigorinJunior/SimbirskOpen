<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PagerStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="pstsShouldExpand">true</item>
        <item name="pstsIndicatorColor">@color/colorAccent</item>
        <item name="pstsDividerColor">@android:color/transparent</item>
        <item name="pstsIndicatorHeight">2dp</item>
        <item name="pstsTextAllCaps">false</item>
    </style>

</resources>
